<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/mainContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="@dimen/dimen_8_dp"
            style="@style/TextAppearance.AppCompat.Caption"
            android:text="Estos datos son meramente informativos y no representan ninguna predicci칩n, recuerde que loto es un juego de azar"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/total"
            android:layout_marginTop="@dimen/dimen_8_dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/dimen_8_dp"
            style="@style/AppTheme.TitleText"
            android:text="Frecuencia de fechas ganadoras por rango"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.BarChart
            android:layout_marginTop="8dp"
            android:id="@+id/histogram"
            android:layout_width="match_parent"
            android:layout_height="210dp" />

        <FrameLayout
            android:layout_marginTop="@dimen/dimen_8_dp"
            android:layout_marginBottom="@dimen/dimen_8_dp"
            android:background="@color/md_blue_grey_50"
            android:id="@+id/adsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_8_dp"
            style="@style/AppTheme.TitleText"
            android:text="Fechas m치s premiadas"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.BarChart
            android:layout_marginTop="8dp"
            android:id="@+id/histogram2"
            android:layout_width="match_parent"
            android:layout_height="210dp" />

        <TextView
            android:layout_marginTop="@dimen/dimen_8_dp"
            style="@style/AppTheme.TitleText"
            android:text="Meses m치s premiados"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.BarChart
            android:layout_marginTop="8dp"
            android:id="@+id/histogram3"
            android:layout_width="match_parent"
            android:layout_height="210dp" />

        <TextView
            android:layout_marginTop="@dimen/dimen_16_dp"
            style="@style/AppTheme.TitleText"
            android:text="Combinaciones m치s premiadas"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:layout_margin="@dimen/dimen_8_dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mes"
                android:id="@+id/month"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fecha"
                android:id="@+id/day"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Frecuencia"
                android:id="@+id/count"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>