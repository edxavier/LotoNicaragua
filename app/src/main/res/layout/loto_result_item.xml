<?xml version="1.0" encoding="utf-8"?>


    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="8dp"
        android:id="@+id/card_diaria"
        android:layout_width="match_parent"
        app:cardElevation="4dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="@dimen/dimen_8_dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dimen_16_dp"
                    app:srcCompat="@drawable/ic_date"
                    android:tint="@color/md_blue_grey_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="28 nov. 2020"
                        android:id="@+id/item_date"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10:00 am"
                        android:textAlignment="center" />

                </LinearLayout>

                <TextView
                    android:id="@+id/item_result1"
                    android:layout_margin="@dimen/dimen_8_dp"
                    android:textSize="14sp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/ball_shape"
                    android:text="697"
                    android:textAlignment="center" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/item_result2"
                    android:layout_margin="@dimen/dimen_8_dp"
                    android:textSize="12sp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/ball_shape"
                    android:text="99"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
